<!-- main_table.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="css/style.css">
    <title>Main Table</title>
    <style>
        /* Adjust table style */
        .table th,
        .table td {
            vertical-align: middle;
        }
    </style>

</head>

<body>

    <!-- Header -->
    <%- include("partials/header.ejs") %>

        <!-- Main content -->
        <div class="wrapper">
            <!-- Sidebar -->
            <%- include("partials/sidebar.ejs") %>
        
            <div class="container">
                <div class="row mt-5">
                    <div class="col-lg-10 col-md-9">
                        <form id="equipmentForm" action="/post_eq" method="POST">
                            <!-- Form starts here -->
                            <h2><input type="text" name="name" placeholder="eq name" required> equipment info</h2>
        
                            <table id="equipmentTable" class="table table-bordered mt-5">
                                <thead class="table-primary">
                                    <!-- Apply table-primary class to make the header blue -->
                                    <tr>
                                        <th>Code</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody id="equipmentTbody">
                                    <tr>
                                        <td><input type="text" name="code" placeholder="e.g. 002-1" required></td>
                                        <td><input type="text" name="description" placeholder="e.g. 150L glass"></td>
                                    </tr>
                                </tbody>
                            </table>
                            <button id="addEquipmentRowButton" type="button" class="btn btn-success">Add Equipment Row</button>
                            <!-- Button to add more rows for equipment -->
        
                            <table id="operationsTable" class="table table-bordered mt-5">
                                <thead class="table-primary">
                                    <!-- Apply table-primary class to make the header blue -->
                                    <tr>
                                        <th>Operation Type</th>
                                        <th>Content</th>
                                        <th>Other</th>
                                    </tr>
                                </thead>
                                <tbody id="operationsTbody">
                                    <tr>
                                        <td><input type="text" name="operationType" placeholder="e.g. loading_into_reactor" required></td>
                                        <td><textarea name="content" cols="120" rows="5" placeholder="describe operation" required></textarea></td>
                                        <td><textarea name="other" cols="20" rows="5" placeholder="e.g. Warehouse code: ......"></textarea></td>
                                    </tr>
                                </tbody>
                            </table>
                            
                            <button id="addOperationRowButton" type="button" class="btn btn-success">Add Operation Row</button>
                            <!-- Button to add more rows for operations -->
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <!-- Submit button -->
                        </form>
                        <!-- Form ends here -->
                    </div>
                </div>
            </div>
        </div>
        

        
        <!-- Footer -->
        <%- include("partials/footer.ejs") %>

            <!-- axios -->
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <!-- Bootstrap JS -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous">
            </script>
            <script>
                // JavaScript to add more rows to the equipment table
                document.getElementById('addEquipmentRowButton').addEventListener('click', function () {
                    var equipmentTbody = document.getElementById('equipmentTbody');
                    var newRowHTML = '<tr><td><input type="text" name="code"></td>' +
                        '<td><input type="text" name="description"></td></tr>';
                    var newRow = document.createElement('tr');
                    newRow.innerHTML = newRowHTML;
                    equipmentTbody.appendChild(newRow);
                });
            
                // JavaScript to add more rows to the operations table
                document.getElementById('addOperationRowButton').addEventListener('click', function () {
                    var operationsTbody = document.getElementById('operationsTbody');
                    var newOperationRowHTML = '<tr><td><input type="text" name="operationType"></td>' +
                        '<td><textarea name="content" cols="120" rows="5"></textarea></td>' +
                        '<td><textarea name="other" cols="20" rows="5"></textarea></td></tr>';
                    var newOperationRow = document.createElement('tr');
                    newOperationRow.innerHTML = newOperationRowHTML;
                    operationsTbody.appendChild(newOperationRow);
                });
            </script>
 </body>

</html>