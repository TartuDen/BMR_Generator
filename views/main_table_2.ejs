<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="css/style.css">
    <title>Main Table</title>

</head>

<body>

    <!-- Header -->
    <%- include("partials/header.ejs") %>

        <!-- Main content -->
        <div class="wrapper">
            <!-- Sidebar -->
            <%- include("partials/sidebar.ejs") %>

                <div class="container mt-3">

                    <form action="/operation_table" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td><input type="text" name="project" class="form-control"
                                                    placeholder="Project" value="tile"></td>
                                            <td><input type="text" name="TP" class="form-control" placeholder="TP"
                                                    value="tp.5"></td>
                                        </tr>
                                    </tbody>
                                </table>


                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <table class="equipment table">
                                    <h2>Select equipment</h2>
                                    <tbody id="equipmentTableBody">

                                    </tbody>
                                </table>
                            </div>

                            <!-- New table for loading materials -->
                            <div class="col-md-6">
                                <table class="table">
                                    <h2>Insert Materials</h2>
                                    <tbody>

                                        <tr>
                                            <td><input type="text" name="reagent=sample" class="form-control"
                                                    placeholder="Reagent here" value="sample"></td>
                                            <td><input type="number" name="amount=sample" class="form-control"
                                                    placeholder="Amounts in kg" step="any" value=""></td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Submit button -->
                        <button class="btn btn-secondary" type="submit">Submit</button>
                    </form>
                </div>
        </div>


        <!-- Footer -->
        <%- include("partials/footer.ejs") %>

            <!-- axios -->
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <!-- Bootstrap JS -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous">
                </script>

            <script>
                /**
                 * Adds a default "--select--" option to a dropdown select element.
                 * 
                 * @param {HTMLElement} selectElement - The dropdown select element to which the default option will be added.
                 */
                function addDefaultOption(selectElement) {
                    // Create the default option element
                    var defaultOption = document.createElement('option');
                    defaultOption.value = '';
                    defaultOption.textContent = '--select--';

                    // Append the default option to the select element
                    selectElement.appendChild(defaultOption);
                }
            </script>

<script>
    const apiRespEquipmentList = <%- JSON.stringify(apiRespEquipmentList) %>;

    async function populateEquipment() {
        const tableBody = document.getElementById("equipmentTableBody");

        // Iterate over each object in the Equipment List
        apiRespEquipmentList.forEach((equipment, index) => {
            // Create a new row for each equipment object
            const row = document.createElement("tr");

            // Create and populate cell with equipment name
            const cellName = document.createElement("td");
            cellName.textContent = equipment.name;
            cellName.classList.add("equipment-cell");
            // Adjust the width of the cell based on the content length
            const contentLength = equipment.name.length;
            cellName.style.width = `${contentLength}em`;
            row.appendChild(cellName);

            // Create plus button to add select elements
            const plusButton = document.createElement("button");
            plusButton.textContent = "+";
            plusButton.type = "button";
            plusButton.classList.add("btn", "btn-primary")
            plusButton.addEventListener("click", createSelect);
            const cellButtonPlus = document.createElement("td");
            cellButtonPlus.appendChild(plusButton);
            row.appendChild(cellButtonPlus);

            // Create delete button to remove select elements
            const deleteButton = document.createElement("button");
            deleteButton.textContent = "-";
            deleteButton.type = "button";
            deleteButton.classList.add("btn", "btn-danger");
            deleteButton.addEventListener("click", deleteSelect);
            const cellButtonDelete = document.createElement("td");
            cellButtonDelete.appendChild(deleteButton);
            row.appendChild(cellButtonDelete);

            // Function to create a select element with a unique id and name
            function createSelect() {
                if (equipmentNumber < maxSelects) {
                    equipmentNumber++;
                    const select = document.createElement("select");
                    select.id = `${equipment.name}-${equipmentNumber}`;
                    select.name = `${equipment.name}-${equipmentNumber}`;
                    const cell = document.createElement("td");
                    cell.appendChild(select);
                    row.insertBefore(cell, row.lastElementChild);
                }
            }

            // Function to delete the last select element
            function deleteSelect() {
                if (equipmentNumber > 0) {
                    row.removeChild(row.lastElementChild.previousElementSibling);
                    equipmentNumber--;
                }
            }

            // Create initial select element
            let equipmentNumber = 0;
            const maxSelects = 3; // Maximum number of select elements
            createSelect();

            // Append row to the table body
            tableBody.appendChild(row);
        });
    }

    // Call the populateEquipment function when the window is loaded
    window.onload = async function () {
        await populateEquipment();
    };
</script>


</body>

</html>