<!-- main_table.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="css/style.css">
    <title>Main Table</title>

</head>

<body>

    <!-- Header -->
    <%- include("partials/header.ejs") %>

        <!-- Main content -->
        <div class="wrapper">
            <!-- Sidebar -->
            <%- include("partials/sidebar.ejs") %>

                <div class="container mt-3">

                    <form action="/operation_table" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table">
                                    <tbody>

                                        <tr>
                                            <td><input type="text" name="project" class="form-control"
                                                    placeholder="Project" value="tile"></td>
                                            <td><input type="text" name="TP" class="form-control" placeholder="TP"
                                                    value="tp.5"></td>
                                        </tr>


                                    </tbody>
                                </table>


                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table">
                                    <h2>Select equipment</h2>
                                    <tbody>
                                        <% equipmentMap.forEach(function(item, index) { %>
                                            <tr>
                                                <th><%= item.equipment %></th>
                                                <td>
                                                    <select id="<%= item.equipment%>1_<%= index %>" name="<%= item.equipment%>1_<%= index %>" class="form-select" style="width: 70%;">
                                                        <!-- Default option -->
                                                        <option value="">Select</option>
                                                        <!-- Options for select 1 -->
                                                        <% item.eq_info.forEach(function(info) { %>
                                                            <option value="<%= info.code %>"><%= info.code %> <%= info.description %></option>
                                                        <% }); %>
                                                    </select>
                                                </td>
                                                <td>
                                                    <select id="<%= item.equipment%>2_<%= index %>" name="<%= item.equipment%>2_<%= index %>" class="form-select" style="width: 70%;">
                                                        <!-- Default option -->
                                                        <option value="">Select</option>
                                                        <!-- Options for select 2 -->
                                                        <% item.eq_info.forEach(function(info) { %>
                                                            <option value="<%= info.code %>"><%= info.code %> <%= info.description %></option>
                                                        <% }); %>
                                                    </select>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                    
                                    
                                    
                                    
                                    
                                </table>
                            </div>

                            <!-- New table for loading materials -->
                            <div class="col-md-6">
                                <table class="table">
                                    <h2>Insert Materials</h2>
                                    <tbody>
                                       
                                            <!-- Render default input fields with empty values and placeholders -->
                                            <% for (let i = 0; i < 10; i++) { %>
                                                <tr>
                                                    <td><input type="text" name="reagent<%= i %>" class="form-control" placeholder="Reagent here"></td>
                                                    <td><input type="number" name="amount<%= i %>" class="form-control" placeholder="Amounts in kg" step="any"></td>
                                                </tr>
                                            <% } %>
                                             
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Submit button -->
                        <button class="btn btn-secondary" type="submit">Submit</button>
                    </form>
                </div>
        </div>


        <!-- Footer -->
        <%- include("partials/footer.ejs") %>

            <!-- axios -->
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <!-- Bootstrap JS -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous">
            </script>
 </body>

</html>