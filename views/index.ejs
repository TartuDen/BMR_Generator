            <script>
                // script for selecting 'description' inside {}
                document.addEventListener("DOMContentLoaded", function () {
                    function boldTextInBraces(text) {
                        return text.replace(/\{([^}]+)\}/g, '<strong>{$1}</strong>');
                    }

                    // Example usage:
                    const contentElement = document.getElementById('description');
                    contentElement.innerHTML = boldTextInBraces(contentElement.innerHTML);
                });
            </script>
            <script>
                let dataFromOperation = {};

                function saveSelectedItem(selectElement) {
                    // Retrieve the selected value from the select element
                    var id = selectElement.id
                    var value = selectElement.value;

                    // Add new elements into dataFromOperation
                    dataFromOperation[id] = value;

                    console.log("Selected values:", dataFromOperation);

                    // Call the function to replace placeholders after selection is made
                    if (dataFromOperation["activityType"]){
                        replacePlaceholders();
                    } 
                    
                }

                function replacePlaceholders() {
                    // Get the string with placeholders
                    let stringTemplate = dataFromOperation["activityType"];

                    // Iterate over each key-value pair in dataFromOperation
                    for (const key in dataFromOperation) {
                        if (key !== "activityType" && dataFromOperation[key]!=="") {
                            // Construct the regular expression to match the placeholder
                            const regex = new RegExp("\\{" + key + "\\}", "g");

                            // Replace the placeholder with its corresponding value in stringTemplate
                            stringTemplate = stringTemplate.replace(regex, dataFromOperation[key]);
                        }
                    }

                    console.log("Replaced string:", stringTemplate);
                    console.log("Original string:", dataFromOperation["activityType"]);
                }

            </script>

